            <template id="audienceCard">
                <div class="col-lg-3 mb-2 p-0">
                    <div class="ag-courses_item">
                        <div class="card border-0 h-100">
                            <div class="card-body ag-courses-item_link">
                                <div class="ag-courses-item_bg"></div>
                                <h5 class="card-title ag-courses-item_title"></h5>
                                <div class="text-center ag-courses-item_date-box">
                                    <span class="card-count"></span>
                                    <sub>Global Audience</sub>
                                </div>
                                <div class="mt-1 text-center ag-courses-item_date-box">
                                    <p style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; font-size: 10px; margin-top: 18px;"></p>
                                </div>
                                <div class="w-100 mt-1 ag-courses-item_date-box">
                                    <a class="audience-link">
                                        <button class="btn btn-card-audience w-100">Audience Details</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </template>
        </div>
    </div>

            <!-- Card Data -->
            <script>
                const audienceData = [
                    {title: "Marketing", count: "28.73M", topics: "Sales Operations,Social Selling,Collaboration,Reporting & Analytics,Pipeline Management,Outbound Strategy,Lead Generation,Sales Automation,Sales Personalization,Sales AI", url: "marketing"},
                    {title: "Sales", count: "29.41M", topics: "Sales Operations,Social Selling,Collaboration,Reporting & Analytics,Pipeline Management,Outbound Strategy,Lead Generation,Sales Automation,Sales Personalization,Sales AI", url: "sales"},
                    {title: "Human Resources", count: "19.21M", topics: "Employee Engagement,Employee Relations,Onboarding,HR Management System,Artificial Intelligence,Hybrid Work,Talent Management,Wellness,Job Analysis,Performance Management,Artificial Intelligence", url: "human-resources"},
                    {title: "Information Technology", count: "49.84M", topics: "Data,Network,Remote Work,Malware,Zero Trust,Security,Software,Phishing,Cloud Services,Cyberattack", url: "information-technology"},
                    {title: "Finance", count: "13.261M", topics: "Risk,Analytics,Automation,FP&A,Software,Remote Work,Reporting,Statistics,Tax Management", url: "finance"},
                    {title: "Business Leaders", count: "3.06M", topics: "Risk,Mentoring,Telecommuting,Customer Loyalty,Diversity,Data,Leadership,Brand Awareness,Ethics,International", url: "business-leaders"},
                    {title: "Supply Chain", count: "2.28M", topics: "Logistics,Materials,Forecasting,Imports/Exports,Operations,Procurement,Vendor Management,Compliance,Stock Management,Inventory Control", url: "supply-chain"},
                    {title: "Learning And Development", count: "1.19M", topics: "LMS,Workplace Safety,Microlearning,Coaching & Mentoring,Well-Being,eLearning,Virtual Events,On-Demand Learning,Soft Skills,Personalized Learning", url: "learning-and-development"},
                    {title: "Customer Experience", count: "0.95M", topics: "Contact Center,Loyalty,Help Desk,Omnichannel,Social Listening,Customer Journey,Empathy,Live Chat,Self-Service,Customer Experience", url: "customer-experience"}
                ];
            </script>
        </div>
    </div>

    <!-- Consolidated JavaScript -->
    <script>
   
        // Dynamic Card Generation
        const cardTemplate = document.getElementById('audienceCard');
        const container = document.querySelector('.ag-courses_box');
        audienceData.forEach((data, index) => {
            const clone = cardTemplate.content.cloneNode(true);
            clone.querySelector('.ag-courses-item_title').textContent = data.title;
            clone.querySelector('.card-count').textContent = data.count;
            clone.querySelector('p').textContent = data.topics + ' ...';
            clone.querySelector('p').title = data.topics;
            // clone.querySelector('a').href = `https://alltake.com/audience-demographics/details/${data.url}`;
            container.appendChild(clone);

            // Color Assignment
            const colors = ['#f9b234', '#3ecd5e', '#e44002', '#952aff', '#cd3e94', '#4c49ea'];
            const lightColors = ['#fcd785', '#a2e8b1', '#ff9a66', '#d9a8ff', '#f5a6cf', '#a2a0ff'];
            const hoverColors = ['#e0a828', '#2da44e', '#c53702', '#7f1fb3', '#b22979', '#3a38c1'];
            const colorIndex = index % 6;

            const item = container.children[container.children.length - 1];
            const bg = item.querySelector('.ag-courses-item_bg');
            bg.style.backgroundColor = lightColors[colorIndex];
            item.querySelector('.ag-courses-item_link').style.setProperty('--light-bg', lightColors[colorIndex]);
            item.querySelector('.ag-courses-item_link').style.setProperty('--hover-bg', hoverColors[colorIndex]);

            const btn = item.querySelector('.btn-card-audience');
            btn.style.backgroundColor = colors[colorIndex];
            btn.addEventListener('mouseover', () => {
                btn.style.backgroundColor = hoverColors[colorIndex];
                btn.style.color = '#ffffff';
            });
            btn.addEventListener('mouseout', () => {
                btn.style.backgroundColor = colors[colorIndex];
                btn.style.color = '';
            });
        });
    </script>
